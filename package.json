    "picomatch": "^4.0.3",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
